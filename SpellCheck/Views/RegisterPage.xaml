<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SpellCheck.ViewModels"
             x:DataType="vm:RegisterPageViewModel"
             x:Class="SpellCheck.Views.RegisterPage"
             Title="Create Account">

    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/CustomResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Background="{StaticResource PageGradient}">
        <ScrollView>
            <VerticalStackLayout Padding="30"
                                Spacing="15"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                MaximumWidthRequest="400">

                <Label Text="Create Account"
                    FontSize="28"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalOptions="Center" />

                <!-- Username -->
                <Border Style="{StaticResource EntryContainerStyle}">
                    <Entry Style="{StaticResource EntryBaseStyle}"
                        Placeholder="Username"
                        Text="{Binding NewUser.Username}" />
                </Border>

                <!-- Email -->
                <Border Style="{StaticResource EntryContainerStyle}">
                    <Entry Style="{StaticResource EntryBaseStyle}"
                        Placeholder="Email"
                        Keyboard="Email"
                        Text="{Binding NewUser.Email}" />
                </Border>

                <!-- Phone number -->
                <Border Style="{StaticResource EntryContainerStyle}">
                    <Entry Style="{StaticResource EntryBaseStyle}"
                        Placeholder="Phone number"
                        Keyboard="Telephone"
                        Text="{Binding NewUser.Number}" />
                </Border>

                <!-- Password -->
                <Border Style="{StaticResource EntryContainerStyle}">
                    <Entry Style="{StaticResource EntryBaseStyle}"
                        Placeholder="Password"
                        IsPassword="True"
                        Text="{Binding NewUser.Password}" />
                </Border>

                <!-- Register button -->
                <Border Style="{StaticResource PrimaryButtonContainer}">
                    <Button Text="REGISTER"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding RegisterCommand}" />
                </Border>

                <!-- Back to login -->
                <Label Style="{StaticResource LinkLabel}"
                    Text="Already have an account? Login"
                    HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToLoginCommand}" />
                    </Label.GestureRecognizers>
                </Label>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
    

</ContentPage>