<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpellCheck.Resources.Styles.CustomResources">

    <!-- Gradient Brush -->
    <LinearGradientBrush x:Key="PageGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#4A00E0" Offset="0.0" />
        <GradientStop Color="#8E2DE2" Offset="0.5" />
        <GradientStop Color="#FF6A88" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Entry (only supported properties) -->
    <Style x:Key="EntryBaseStyle" TargetType="Entry">
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="PlaceholderColor" Value="#888" />
        <Setter Property="Margin" Value="0,5" />
    </Style>

    <!-- Rounded container for Entry -->
    <Style x:Key="EntryContainerStyle" TargetType="Border">
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="Background" Value="White" />
        <Setter Property="Padding" Value="10,0" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="8" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Gradient button container -->
    <Style x:Key="PrimaryButtonContainer" TargetType="Border">
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="Background" Value="{StaticResource PageGradient}" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="25" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Actual Button (transparent so gradient shows through) -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="BorderColor" Value="Transparent" />
    </Style>

    <!-- Link label -->
    <Style x:Key="LinkLabel" TargetType="Label">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="12" />
    </Style>
</ResourceDictionary>